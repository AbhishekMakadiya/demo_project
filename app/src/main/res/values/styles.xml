        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black40</item>
        <item name="maxLines">1</item>
        <item name="myFontFamily">regular</item>
        <item name="MyEdtCorRadiusTopLeft">@dimen/_4dp</item>
