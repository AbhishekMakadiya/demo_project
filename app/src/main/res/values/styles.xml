    <style name="AppEditStyleCode">
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/txt_28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="MyEdtBackgroundColor">@color/transparent</item>
        <item name="MyEdtBackgroundStrokeSize">2</item>
        <item name="MyEdtBackgroundStrokeColor">@color/white40</item>
        <item name="myFontFamily">medium</item>
        <item name="MyEdtCorRadiusTopLeft">@dimen/_8dp</item>
        <item name="MyEdtCorRadiusTopRight">@dimen/_8dp</item>
        <item name="MyEdtCorRadiusBottomLeft">@dimen/_8dp</item>
        <item name="MyEdtCorRadiusBottomRight">@dimen/_8dp</item>
